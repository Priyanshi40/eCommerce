@model DAL.ViewModels.CartViewModel
@{
    ViewData["Title"] = "My Cart";
    ViewData["showLayout"] = true;
}

<div class="content dash p-4 m-4">
    <h2 class="mb-4 txtCustom">My Cart</h2>

    <div class="row">
        @if (Model.CartItems.Count > 0)
        {
            foreach (var item in Model.CartItems)
            {
                <div class="col-md-3 mb-4">
                    <div class="card h-100 shadow-sm border-0" data-id="@item.Id">
                        <img src="~/images/@item.CoverImage" class="card-img-top" style="height: 250px; object-fit: contain;">
                        <div class="card-body">
                            <h5 class="card-title">@item.Name</h5>
                            <p class="card-text small text-muted">@item.Name</p>
                            <p class="card-text fw-semibold">â‚¹ @item.Price</p>
                        </div>
                        <div class="card-footer bg-white border-top-0 d-flex justify-content-between align-items-center">
                            <div>
                                <div class="d-flex flex-row" style="border: 2px solid #0c5ba3; border-radius: 5px;">
                                    <div class="btn dec" data-quantity="@item.Quantity">-</div>
                                    <div class="d-flex align-items-center justify-content-center px-2 input">@item.Quantity</div>
                                    <div class="btn inc" data-quantity="@item.Quantity">+</div>
                                </div>
                            </div>
                            <button class="btn btn-outline-primary">Remove</button>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="text-center p-5">
                <h5 class="mt-3">No items in cart</h5>
                <p class="text-muted">You haven't Added any Products yet. Explore Products to get started.</p>
                <a href="/Home/ProductByCategory" class="btn btn-primary">Browse Products</a>
            </div>
        }
    </div>

    @if (Model.TotalPages > 1)
    {
        <nav>
            <ul class="pagination justify-content-center">
                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                        <a class="page-link"
                            href="@Url.Action("Wishlist", "User", new { pageNumber = i, pageSize = Model.PageSize })">@i</a>
                    </li>
                }
            </ul>
        </nav>
    }
</div>

@section Scripts {
    <script>
        $(document).on('click', '.removeFromWishlist', function () {
            var productId = $(this).data('id');
            $.ajax({
                url: '/User/Home/ToggleWishlist',
                type: 'POST',
                data: { productId: productId },
                success: function (response) {
                    if (response.success) {
                        location.reload();
                    } else {
                        alert("Something went wrong!");
                    }
                }
            });
        });

        $('.dec').click(function (e) {
        e.preventDefault();
        var input = $(this).closest('.d-flex').find('.input')[0];
        var value = parseInt(input.innerHTML);
        if (!isNaN(value)) {
            if (value < 1) {
                input.innerHTML = 0;
            }
            else {
                input.innerHTML = value - 1;
            }
        }
    });
    $('.inc').click(function (e) {
        e.preventDefault();
        var input = $(this).closest('.d-flex').find('.input')[0];
        var value = parseInt(input.innerHTML);
        var maxVal = $(this).data('quantity');
        console.log(maxVal);
        if (value >= maxVal) {
            input.innerHTML = maxVal;
        }
        else if (!isNaN(value)) {
            input.innerHTML = value + 1;
        }
    });
    </script>
}