@using DAL.Models
@model DAL.ViewModels.ProductViewModel

@{
    ViewData["Title"] = "Product Details";
    ViewData["showLayout"] = true;
}

<style>
    .zoom-wrapper {
        position: relative;
        overflow: hidden;
        border: 1px solid #ddd;
    }

    .zoom-img {
        transition: transform 0.3s ease;
        width: 100%;
        height: auto;
        object-fit: contain;
    }

    .zoom-wrapper:hover .zoom-img {
        transform: scale(1.5);
        cursor: zoom-in;
    }

    .thumbImg {
        width: 80px;
        height: 80px;
        object-fit: cover;
        margin: 5px;
        border: 1px solid #ccc;
        cursor: pointer;
        transition: border 0.2s;
    }

    .thumbImg.active {
        border: 2px solid #007bff;
    }
</style>

<div class="content">
    <div class="row">
        <div class="col-md-6">
            <div class="zoom-wrapper mb-3">
                @* <img id="mainImage" src="~/images/@Model.CoverImage" data-zoom-image="~/images/@Model.CoverImage" class="zoom-img img-fluid" /> *@
                <img id="mainImage" src="~/images/@Model.CoverImage" class="zoom-img img-fluid" />
            </div>
            <div class="d-flex flex-wrap">
                @if (Model.ProductImages != null && Model.ProductImages.Any())
                {
                    <img src="~/images/@Model.CoverImage" class="thumbImg" onclick="changeMainImage(this)" />
                    foreach (var img in Model.ProductImages)
                    {
                        <img src="~/images/@img" class="thumbImg" onclick="changeMainImage(this)" />
                    }
                }
            </div>
        </div>
        <div class="col-md-6">
            <h3>@Model.Name</h3>
            <p class="text-muted">@Model.CategoryName</p>
            <h4 class="text-success">â‚¹ @Model.Price.ToString("N2")</h4>
            <p>@Html.Raw(Model.Description)</p>
            <hr />
            <button class="btn btn-outline-secondary "><i class="fa-solid fa-cart-plus m-2"></i>Add to Cart</button>
            <button class="btn btn-primary"><i class="fa-solid fa-bolt-lightning m-2"></i>Buy Now</button>
        </div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript"
        src="https://cdn.rawgit.com/igorlino/elevatezoom-plus/1.1.6/src/jquery.ez-plus.js"></script>
    <script>
        function changeMainImage(img) {
            const mainImage = document.getElementById("mainImage");
            mainImage.src = img.src;
            document.querySelectorAll(".thumbImg").forEach(t => t.classList.remove("active"));
            img.classList.add("active");
        }
        @* $("#mainImage").elevateZoom(); *@
    </script>
}